---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"       : "{{ post.title | escape }}",
      "description" : "{{ post.description | jsonify }}",
      "date"        : "{{ post.date }}",
      "categories"  : "{{ post.categories | array_to_sentence_string }}",
      "by"          : "{{ post.by }}",
      "url"         : "{{ site.baseurl }}{{ post.url }}",
      "icon"        : "{{ post.icon }}"

    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
